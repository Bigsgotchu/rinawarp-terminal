{
  "name": "rinawarp-terminal",
  "version": "1.0.0",
  "description": "RinaWarp Terminal - An advanced open-source terminal emulator with AI assistance, themes, and plugins",
  "main": "src/main.js",
  "type": "module",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron src/main.js",
    "test": "jest",
    "build": "electron-builder",
    "dev": "electron src/main.js --dev"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "build": {
    "appId": "com.rinawarp.terminal",
    "productName": "RinaWarp Terminal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "styles/**/*",
      "package.json"
    ],
    "win": {
      "icon": "assets/ico/rinawarp-terminal.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "assets/ico/rinawarp-terminal.ico",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "icon": "assets/png/sizes/monogram-mermaid-icon-large-256px.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    }
  }
}
