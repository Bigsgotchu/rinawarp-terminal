{
  "name": "rinawarp-terminal",
  "version": "1.0.0",
  "description": "RinaWarp Terminal - An advanced open-source terminal emulator with AI assistance, themes, and plugins",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-installer": "electron-builder --win --publish=never",
    "build-portable": "electron-builder --win portable --publish=never",
    "build-all": "electron-builder --win nsis portable --publish=never",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall-disabled": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "pwsh -ExecutionPolicy Bypass -File ./quick-clean.ps1",
    "clean:cache": "pwsh -ExecutionPolicy Bypass -File ./cleanup.ps1 -Cache",
    "clean:logs": "pwsh -ExecutionPolicy Bypass -File ./cleanup.ps1 -Logs",
    "clean:deep": "pwsh -ExecutionPolicy Bypass -File ./cleanup.ps1 -Deep",
    "clean:all": "pwsh -ExecutionPolicy Bypass -File ./cleanup.ps1 -All",
    "clean:dry-run": "pwsh -ExecutionPolicy Bypass -File ./cleanup.ps1 -All -DryRun"
  },
  "keywords": [
    "terminal",
    "shell",
    "command-line",
    "electron",
    "ai-assistant",
    "themes",
    "plugins",
    "git-integration",
    "command-suggestions"
  ],
  "author": "RinaWarp Technologies",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@testing-library/jest-dom": "^6.1.4",
    "babel-jest": "^30.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-mock-ipc": "^0.3.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0"
  },
  "build": {
    "appId": "com.rinawarp.terminal.unique",
    "productName": "RinaWarp Terminal",
    "executableName": "rinawarp-terminal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "styles/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "RinaWarp-Terminal-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RinaWarp Terminal",
      "uninstallDisplayName": "RinaWarp Terminal",
      "license": "LICENSE",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "RinaWarp-Terminal-Portable-${version}.${ext}"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraMetadata": {
      "main": "src/main.js"
    },
    "publish": null
  }
}
